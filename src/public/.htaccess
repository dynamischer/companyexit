# public/.htaccess
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Wenn Datei oder Ordner existiert â†’ normal ausliefern
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Sonst alles an index.html weiterleiten (SPA-Fallback)
  RewriteRule ^ index.html [L]
</IfModule>
